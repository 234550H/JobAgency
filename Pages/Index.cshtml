@page
@model WebApplication1.Pages.IndexModel
@{
    ViewData["Title"] = "Job Agency Page";

    // Retrieve session data for the user
    var userEmail = HttpContext.Session.GetString("UserEmail");
    var userName = HttpContext.Session.GetString("UserName");
    var sessionStartTime = HttpContext.Session.GetString("SessionStartTime");
    var sessionId = HttpContext.Session.GetString("SessionId");

    // User personal information from Session
    var firstName = HttpContext.Session.GetString("FirstName");
    var lastName = HttpContext.Session.GetString("LastName");
    var dob = HttpContext.Session.GetString("DateOfBirth");
    var gender = HttpContext.Session.GetString("Gender");
    var nric = HttpContext.Session.GetString("NRIC");
    var whoami = HttpContext.Session.GetString("whoami");
    var decryptedPassword = HttpContext.Session.GetString("decryptedPassword");

}

@if (userEmail != null)
{
    <div class="user-info">
        <h3>Welcome, @userEmail!</h3>
        <p>Email: @userEmail</p>
        <p>NRIC: @nric</p>
        <p>First Name: @firstName</p>
        <p>Last Name: @lastName</p>
        <p>Date of Birth: @dob</p>
        <p>Gender: @gender</p>
        <p>Who Am I: @whoami</p>
        <p>Session ID: @sessionId</p>
        <p>Session Start Time: @sessionStartTime</p>
    </div>
}
else
{
    <p>Please log in to see your details.</p>
}

